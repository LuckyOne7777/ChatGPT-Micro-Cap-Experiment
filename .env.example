#############################################
# Example Environment Configuration (.env)  #
#############################################

# Core runtime mode: dev_stage (synthetic) | production (live Finnhub)
APP_ENV=dev_stage

# Finnhub live data key (leave blank for synthetic only)
FINNHUB_API_KEY=

# Paths (override only if relocating data)
APP_DATA_DIR=data
APP_DB_FILE=data/trading.db
APP_PORTFOLIO_CSV=data/chatgpt_portfolio_update.csv
APP_TRADE_LOG_CSV=data/chatgpt_trade_log.csv
APP_WATCHLIST_FILE=data/watchlist.json

# Cache / performance
APP_CACHE_TTL_SECONDS=300

# Governance / Risk (future toggles)
# GOV_ENFORCE=true            # Enable pre-trade rule blocking globally
# TURNOVER_WINDOW_DAYS=30
# TURNOVER_MAX_PCT=0.80

# Provider selection overrides
ENABLE_MICRO_PROVIDERS=
APP_USE_FINNHUB=

# Disable synthetic seed portfolio
NO_DEV_SEED=false

# (Optional) Additional logging / diagnostics could go here
# LOG_LEVEL=INFO
